import telebot
from telebot import types

bot = telebot.TeleBot('6238905540:AAHXCi1vkaTbsiRVESwF2cCc22R94M07gRw')

@bot.message_handler(commands=['start'])
def start(message):

    markup = types.ReplyKeyboardMarkup(resize_keyboard=True)
    btn1 = types.KeyboardButton("üëãstart")
    markup.add(btn1)
    bot.send_message(message.from_user.id, "–ü—Ä–∏–≤–µ—Çüëã.  
    –Ø - –±–æ—Ç-–ø–æ–º–æ—â–Ω–∏–∫ Petroschool. 
    –†–∞–¥—ã –ø—Ä–∏–≤–µ—Ç—Å—Ç–≤–æ–≤–∞—Ç—å —Ç–µ–±—è –Ω–∞ –Ω–∞—à–µ–π –ø—Ä–æ–≥—Ä–∞–º–º–µüòä 
    –í–º–µ—Å—Ç–µ –º—ã –±—É–¥–µ–º –∏–∑—É—á–∞—Ç—å –Ω–µ—Ñ—Ç–µ–≥–∞–∑–æ–≤—É—é –æ—Ç—Ä–∞—Å–ª—åüòé", reply_markup=markup)

@bot.message_handler(content_types=['text'])
